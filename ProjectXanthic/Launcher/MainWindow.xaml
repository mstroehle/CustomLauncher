<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="Topaz Launcher" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Button x:Name="AddButtonTest" Content="Add button" HorizontalAlignment="Left" Margin="682,24,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="23"/>
        <DockPanel x:Name="DockPanelProgramList" HorizontalAlignment="Left" LastChildFill="False" VerticalAlignment="Top" Width="150" Height="409" Background="#FFDA1919"/>
        <RichTextBox x:Name="DebugTextBox" HorizontalAlignment="Left" Height="300" Margin="621,80,0,0" VerticalAlignment="Top" Width="136">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ScrollViewer x:Name="ScrollPanelProgramList" HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="150" Background="#FFA92EE6" CanContentScroll="True" VerticalScrollBarVisibility="Disabled">
            <StackPanel x:Name="StackPanelProgramList" HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="150" Background="#FF507FCF"/>
        </ScrollViewer>
        <Button x:Name="ButtonAddToProgramList" Content="+" HorizontalAlignment="Left" Margin="0,380,0,0" VerticalAlignment="Top" Width="150" Height="34" IsCancel="True" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
